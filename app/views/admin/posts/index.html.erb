<h2>Posty</h2>



<div>
  <table class="table table-striped">
  <thead>
  <tr>
  <th>Tytuł</th>
  <th>Typ produktu</th>
  <th>Akcje</th>
  <th></th>
  </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
          <td>
            <%= post.title %>
          </td>
          <td>
            <%= post.product_type.name %>
          </td>
          <td>
            <%= link_to "Edycja", edit_admin_post_path(post), class: "btn btn-default btn-xs" %>
            <%= link_to "Usuń", admin_post_path(post), method: :delete,  class: "btn btn-danger btn-xs", data: {confirm: 'Czy na pewno chcesz usunać post?'} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<div>

<div>
  <%= link_to new_admin_post_path, class: "btn btn-primary" do %>
  <span class="fa fa-plus"></span> Dodaj nowy post
  <% end %>
</div>