<%= simple_form_for [:admin, @post] do |f| %>
<div class="form-group">
 <%= f.input :title %>
 <%= f.input :description %>
 <%= f.input :long_description %>
<%= f.file_field :picture, :label => 'Your avatar please' %>
 <%= f.association :product_type %>
   </div>

   <div>
 <%= f.submit "Zapisz", class: "btn btn-primary" %>
  <%= link_to "Anuluj", :back %>
  </div>
<% end %>
